# Environment
ENVIRONMENT=development  # development или production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/edu_na_bazar

# Redis
REDIS_URL=redis://localhost:6380/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Mapbox (optional for backend)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# SMS Settings
# В режиме разработки (false) коды выводятся в консоль вместо отправки SMS
# На проде установить в true для реальной отправки через SMSC.RU
SMS_ENABLED=false
SMSC_LOGIN=your_login
SMSC_PASSWORD=your_password

# Email Settings
# В режиме разработки (false) письма не отправляются, только логируются
# На проде установить в true для реальной отправки
MAIL_ENABLED=false
MAIL_USERNAME=noreply@edu-na-bazar.ru
MAIL_PASSWORD=your_email_password_here
MAIL_FROM=noreply@edu-na-bazar.ru
MAIL_FROM_NAME=Еду на базар
MAIL_PORT=587
MAIL_SERVER=smtp.yandex.ru
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
MAIL_USE_CREDENTIALS=true
MAIL_VALIDATE_CERTS=true
