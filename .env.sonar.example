# ============================================
# Конфигурация SolarappScreener / SonarQube
# ============================================

# Вариант 1: SolarappScreener (облачный сервер РТК)
# SONAR_HOST_URL=https://solar.rtk.ru
# SONAR_TOKEN=ваш-токен-от-ртк

# Вариант 2: SonarQube (локальный для разработки)
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=admin

# Дополнительные параметры
SONAR_PROJECT_KEY=edu-na-bazar
SONAR_PROJECT_NAME=Edu Na Bazar
SONAR_ORGANIZATION=rtk

# Пути к исходникам
SONAR_SOURCES=backend/api,frontend/src
SONAR_TESTS=backend/tests,frontend/src/__tests__

# Исключения
SONAR_EXCLUSIONS=**/scripts/**,**/alembic/**,**/migrations/**
