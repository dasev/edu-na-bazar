# ===========================================
# Еду на базар - Environment Configuration
# ===========================================

# Environment Mode
ENVIRONMENT=production  # development или production

# Database Configuration
POSTGRES_DB=edu_na_bazar
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-secret-key-here-min-32-chars-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
# Development: localhost
# Production: ваши домены (с https://)
# Пример: https://edunabazar.ru,https://www.edunabazar.ru,https://api.edunabazar.ru
ALLOWED_ORIGINS=http://localhost:3000,http://localhost,https://yourdomain.com,https://www.yourdomain.com

# SMS Service (SMSC.RU)
SMS_ENABLED=false  # true для production, false для development
SMSC_LOGIN=your_smsc_login
SMSC_PASSWORD=your_smsc_password

# Mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# API URLs
REACT_APP_API_URL=http://localhost:8000

# Docker Hub (для CI/CD)
DOCKER_USERNAME=your_docker_username

# Server (для деплоя)
SERVER_HOST=your_server_ip
SERVER_USER=root
